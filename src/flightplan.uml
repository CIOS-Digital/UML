@startuml
!include coordinate.uml

package FlightPlan {
    +class FlightPlan {
        -List<Coordinate> Waypoints
        __
        {static} +FlightPlan Empty()
        ..
        {static} +FlightPlan XmlLoad(String filename)
        +String ToXmlString()
        ..
        +int CountWaypoints()
        +IEnumerable<Waypoint> GetWaypoints()
        +void AppendWaypoint(Waypoint)
        +bool ContainsWaypoint(Waypoint)
        +bool InsertWaypoint(Waypoint, int index)
        +bool MoveWaypoint(Waypoint from, Waypoint to)
        +bool MoveWaypoint(int index, Waypoint to)
        +bool RemoveWaypoint(Waypoint)
        +bool RemoveWaypoint(int index)
    }

    FlightPlan *-- Waypoint

    +class Waypoint {
        -Coordinate Coordinate
        -String ID
        -WaypointType Type
    }

    Waypoint *-- Coordinate
    Waypoint o-- WaypointType

    +enum WaypointType {
        UserWaypoint
        Airport
    }
}

@enduml
